                    @if (categories == null)
                        {
                            <p><em>Loading...</em></p>
                        }
                        else if (!categories.Any())
                        {
                            <p><em>No categories found.</em></p>
                        }
                        else
                        {
                  <table>
                    <thead>
                      <tr>
                        <th>Nome</th>
                        <th>Apagar</th>
                      </tr>
                    </thead>
                    <tbody>
                    @foreach (var category in categories)
                    {
                                    <tr>
                                        <td>@category.Name</td>
                                                            <td>
                                                                <a @onclick="() => DeleteMovie(category.Id)"> <i class="fa fa-trash"></i></a>
                                                            </td>
                                    </tr>
                                }
                                </tbody>
                  </table>
                        }
