@using PROJECT_ES.Data
@inject CompetitionsController CompetitionsController
@model PROJECT_ES.ViewModels.CompetitionsViewModel

@{
    ViewData["Title"] = "Competition Statics";
}

<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VoteCine</title>

  <!-- 
    - favicon
  -->
  <link rel="shortcut icon" href="/images/logo1.png" type="image/png">

  <link rel="stylesheet" href="/css/teste.css">

  <!-- 
    - google font link
  -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body id="top">

  <!-- 
    - #HEADER
  -->

<header class="header" data-header>
  <div class="container">

    <div class="overlay" data-overlay></div>

    <a href="/" class="logo">
      <img style="width: 30%" src="/images/logo1.png"/>
    </a>

    <div class="header-actions">

      <button class="search-btn">
        <ion-icon name="search-outline"></ion-icon>
      </button>

      <div class="lang-wrapper">
        <label for="language">
          <ion-icon name="globe-outline"></ion-icon>
        </label>

        <select name="language" id="language">
          <option value="en">PT</option>
          <option value="au">ES</option>
        </select>
      </div>

      <a class="btn btn-primary" href="/Welcome">ADMIN</a>

    </div>
      
    <nav class="navbar" data-navbar>
      <ul class="navbar-list">

        <li>
          <a href="#" class="navbar-link">Inicio</a>
        </li>

        <li>
          <a href="#" class="navbar-link">Competições</a>
        </li>

        <li>
          <a href="#" class="navbar-link">Filmes</a>
        </li>
        <!--
        <li>
          <a href="#" class="navbar-link">Web Series</a>
        </li>

        <li>
          <a href="#" class="navbar-link">Pricing</a>
        </li>
        -->
      </ul>

    </nav>

  </div>
</header>


  <!--
    - main container
  -->
<div class="container">

  <!--
  - MAIN SECTION
  -->
  <main>

    <!--
    - #BANNER SECTION
    -->
    <section class="banner">
      <div class="banner-card">

        <img src="/images/banner1.png" class="banner-img" alt="">

        <div class="card-content">
          <div class="card-info">

            <div class="genre">
              <ion-icon name="film"></ion-icon>
              <span>Action/Thriller</span>
            </div>

            <div class="year">
              <ion-icon name="calendar"></ion-icon>
              <span>2019</span>
            </div>

            <div class="duration">
              <ion-icon name="time"></ion-icon>
              <span>2h 11m</span>
            </div>

            <div class="quality">4K</div>

          </div>

          <h2 class="card-title">@Model.Competition.Name</h2>
        </div>

      </div>
    </section>
  </main>
</div>


<div>
@foreach (var category in Model.Category)
{
  <p>categoria: @category.Name vencedor foi</p>
                                                        
}

<table class="table">
    <thead>
        <tr>
          <th>Category Name</th>
            <th>Movie Winner</th>
            <th>Vote Count</th>
        </tr>
    </thead>
    <tbody>
        @if (@Model.statistics != null && @Model.statistics.Any())
        {
            var previousCompetitionName = "";
            var categoryCount = 0;
            foreach (var vote in @Model.statistics)
            {
                

                <tr>
                    
                    <td>@vote.CategoryName</td>
                    <td>@vote.MovieTitle</td>
                    <td>@vote.VoteCount</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">Sem informação.</td>
            </tr>
        }
    </tbody>
</table>
</div>


<script src="/js/teste.js"></script>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>

</html>