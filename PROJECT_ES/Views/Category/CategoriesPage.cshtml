@using PROJECT_ES.Data
@model PROJECT_ES.ViewModels.CategoryViewModel
@inject CategoryController categoryController
@{
    ViewData["Title"] = "Categories";
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VoteCine</title>

  <!-- 
    - favicon
  -->
  <link rel="shortcut icon" href="./logo1.png" type="image/svg+xml">
  
  <link rel="stylesheet" href="/css/teste.css">

  <!-- 
    - google font link
  -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>


<body id="top">

<!-- 
- #HEADER
-->

    <header class="header" data-header>
        <div class="container">

            <div class="overlay" data-overlay></div>

            <a href="/" class="logo">
                <img style="width: 30%" src="/images/logo1.png"/>
            </a>

            <div class="header-actions">

                <button class="search-btn">
                    <ion-icon name="search-outline"></ion-icon>
                </button>

                <div class="lang-wrapper">
                    <label for="language">
                        <ion-icon name="globe-outline"></ion-icon>
                    </label>

                    <select name="language" id="language">
                        <option value="en">PT</option>
                        <option value="au">ES</option>
                    </select>
                </div>

                <a class="btn btn-primary" href="/Welcome">ADMIN</a>

            </div>

            <nav class="navbar" data-navbar>
                <ul class="navbar-list">

                    <li>
                        <a href="#" class="navbar-link">Inicio</a>
                    </li>

                    <li>
                        <a href="#" class="navbar-link">Competições</a>
                    </li>

                    <li>
                        <a href="#" class="navbar-link">Filmes</a>
                    </li>
                    <!--
                    <li>
                        <a href="#" class="navbar-link">Web Series</a>
                    </li>

                    <li>
                        <a href="#" class="navbar-link">Pricing</a>
                    </li>
                    -->
                </ul>

            </nav>

        </div>
    </header>



<!-- 
        - #Filmes
      -->

      <section class="tv-series" style="padding-top: 150px;">
        <div class="container">
          
          <div class="badge">
            <p class="section-subtitle">Competição</p>
            <h2 class="h2 section-title">@Model.Competition.Name</h2>
          </div>
          <ul class="movies-list">
            <li>
              <div class="movie-card">

                <a href="#">
                  <figure class="card-banner">
                    <img src="images/series-1.png" alt="Moon Knight movie poster">
                  </figure>
                </a>

                <div class="title-wrapper">
                  <a href="./movie-details.html">
                    <h3 class="card-title">Moon Knight</h3>
                  </a>

                  <time datetime="2022">2022</time>
                </div>

                <div class="card-meta">
                  <div class="badge badge-outline">2K</div>

                  <div class="duration">
                    <ion-icon name="time-outline"></ion-icon>

                    <time datetime="PT47M">47 min</time>
                  </div>

                  <div class="rating">
                    <ion-icon name="star"></ion-icon>

                    <data>8.6</data>
                  </div>
                </div>

              </div>
            </li>

          </ul>

        </div>
      </section>


<!--INICIO CATEGORIAS-->

    <section class="upcoming" id="comp">
      <div class="container">

        <div class="flex-wrapper">

          <div class="title-wrapper">
            <p class="section-subtitle">VOTAR</p>

            <h2 class="h2 section-title">Categorias</h2>
          </div>

          <ul class="filter-list">

            <li>
              <button class="filter-btn">Ver mais ></button>
            </li>
          </ul>

        </div>
        <div class="slider-wrapper">
          <ul class="movies-list  has-scrollbar " id="moviesSlider">
            @foreach (var category in Model.Categories)
            {
              <li>
                <div class="movie-card">

                  <button class="vote-btn" data-competition-id="@Model.Competition.Id" data-category-id="@category.Id">
                    <figure class="card-banner">
                      <img src="" />
                    </figure>
                  </button>

                  <div class="title-wrapper">
                    <button class="vote-btn" data-competition-id="@Model.Competition.Id" data-category-id="@category.Id">
                      <h3 class="card-title-alone" >@category.Name</h3>
                    </button>
                  </div>
                  <div class="card-meta">
                  </div>
                </div>
              </li>
            
          }
          </ul>
        </div>
      </div>
    </section>
    <!-- FINAL CATEGORIAS-->


<div class="container">
    <h1>Movies</h1>
</div>
<div class="category-slider">
    @foreach (var movie in Model.Movies)
    {
        <div class="category-slide">
            <td><img src="@movie.Image" width="50" height="70"/></td>
            <h3>@movie.Title</h3>
        </div>
    }
</div>


  <!-- 
    - #FOOTER
  -->

  <footer class="footer">

    <div class="footer-top">
      <div class="container">

        <div class="footer-brand-wrapper">

          <a href="./index.html" class="logo">
            <img style="width: 30%" src="/images/logo1.png">
          </a>

          <ul class="footer-list">

            <li>
              <a href="./index.html" class="footer-link">Inicio</a>
            </li>

            <li>
              <a href="#" class="footer-link">Competições</a>
            </li>

            <li>
              <a href="#" class="footer-link">Filmes</a>
            </li>
<!--
            <li>
              <a href="#" class="footer-link">Web Series</a>
            </li>

            <li>
              <a href="#" class="footer-link">Pricing</a>
            </li>
-->
          </ul>

        </div>

        <div class="divider"></div>

        <div class="quicklink-wrapper">

          <ul class="quicklink-list">

            <li>
              <a href="#" class="quicklink-link">Faq</a>
            </li>

            <li>
              <a href="#" class="quicklink-link">Centro de Ajuda</a>
            </li>

            <li>
              <a href="#" class="quicklink-link">Termos de utilização</a>
            </li>

            <li>
              <a href="#" class="quicklink-link">Privacidade</a>
            </li>

          </ul>

          <ul class="social-list">

            <li>
              <a href="#" class="social-link">
                <ion-icon name="logo-facebook"></ion-icon>
              </a>
            </li>

            <li>
              <a href="#" class="social-link">
                <ion-icon name="logo-twitter"></ion-icon>
              </a>
            </li>

            <li>
              <a href="#" class="social-link">
                <ion-icon name="logo-pinterest"></ion-icon>
              </a>
            </li>

            <li>
              <a href="#" class="social-link">
                <ion-icon name="logo-linkedin"></ion-icon>
              </a>
            </li>

          </ul>

        </div>

      </div>
    </div>

  </footer>

  <!-- 
    - #GO TO TOP
  -->

  <a href="#top" class="go-top" data-go-top>
    <ion-icon name="chevron-up"></ion-icon>
  </a>


<script src="/js/teste.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>

<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

<script>  
    $('.vote-btn').on('click', function() {
        var competitionId = $(this).data('competition-id');
        var categoryId = $(this).data('category-id');
        // Navigate to the Voting page with the competitionId and categoryId as parameters
        window.location.href = '/Vote/VotingPage?competitionId=' + competitionId + '&categoryId=' + categoryId;
    });  
  </script>

</body>
</html>